olor: var(--background-color);\n  display: flex;\n  flex-direction: column;\n}\n\n/* -------------\n     Layout\n-------------- */\n.main-container {\n  margin-top: 2rem;\n  display: flex;\n}\n\n.aside {\n  width: 20%;\n  display: flex;\n  flex-direction: column;\n}\n\n/* --------------\n     Components \n----------------- */\n.title {\n  font-family: var(--title-font);\n  font-size: 4rem;\n  margin: 0;\n  text-transform: uppercase;\n  color: white;\n}\n\n.btn {\n  padding: 0.3em 0.5em;\n  display: table-cell;\n  vertical-align: middle;\n  width: 5rem;\n  height: 2.5rem;\n  border: 1px solid rgba(0, 0, 0, 0.2);\n  font: inherit;\n  border-radius: 0.3em;\n  box-shadow: 0 1px 0 rgba(255, 255, 255, 0.7) inset, 0 0.15em 0.1em -0.1em rgba(0, 0, 0, 0.4);\n  background: linear-gradient(rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0)) var(--button-color);\n  color: white;\n  font-weight: bold;\n  text-shadow: 0 -0.5em 0.1em rgba(0, 0, 0, 0.3);\n  cursor: pointer;\n  outline: none;\n  margin: 0 auto;\n}\n\n.autoplay {\n  position: absolute;\n  display: none;\n}\n\n.aside__rules-btn {\n  display: inline-block;\n  background: none;\n  cursor: pointer;\n  color: white;\n  border: none;\n  border-bottom: white;\n}\n\n@keyframes slideIn {\n  from {\n    bottom: -300px;\n    opacity: 0;\n  }\n  to {\n    bottom: 0;\n    opacity: 1;\n  }\n}\n@keyframes fadeIn {\n  from {\n    opacity: 0;\n  }\n  to {\n    opacity: 1;\n  }\n}\n.modal {\n  display: none;\n  position: fixed;\n  top: 0;\n  left: 0;\n  z-index: 1;\n  width: 100%;\n  height: 100%;\n  overflow: auto;\n  background: rgba(0, 0, 0, 0.7);\n}\n\n.modal__content {\n  position: fixed;\n  bottom: 0;\n  width: 100%;\n  height: 20%;\n  background: white;\n  padding: 1.5rem 2rem;\n  animation-name: slideIn;\n  animation-duration: 0.4s;\n}\n\n.modal__close {\n  text-align: right;\n  font-size: 1.75rem;\n  cursor: pointer;\n}\n\n.board {\n  height: 100%;\n  border-spacing: 0;\n  margin: 0.5em auto;\n  border-collapse: collapse;\n}\n\n.board td {\n  border: 1px solid white;\n}\n\n@keyframes appear {\n  50% {\n    box-shadow: 0 0 0 99px #bbbbbb inset;\n  }\n}\n.board input[type=checkbox] {\n  -webkit-appearance: none;\n  -moz-appearance: none;\n  appearance: none;\n  display: block;\n  height: 30px;\n  width: 30px;\n  border: 0;\n  background-color: transparent;\n}\n\n.board input[type=checkbox]:checked {\n  background: white;\n  --moz-box-shadow: 0 0 0 99px black inset;\n  animation: appear 500ms;\n}\n\n.board input[type=checkbox]:focus {\n  border: 2px solid darkblue;\n}\n\n/* ------------\n    Utility\n--------------*/\n.x-center {\n  margin: 0 auto;\n}"],"names":[],"version":3,"file":"game-of-life-v3.b205551a.css.map","sourceRoot":"/__parcel_source_root/"}