/* --------------
     Base styles
----------------- */
@import url("https://fonts.googleapis.com/css2?family=VT323&display=swap");

:root {
  /* Colors */
  --background-color: hsl(224, 98%, 21%);
  --button-color: hsl(27, 100%, 52%);
  --button-color-stop: hsl(0, 79%, 46%);

  /* Fonts */
  --title-font: "VT323", monospace;
  --regular-font: sans-serif;
}

* {
  padding: 0;
  margin: 0;
}

body {
  text-align: center;
  font-family: var(--regular-font);
  background-color: var(--background-color);
  display: flex;
  flex-direction: column;
}

/* -------------
     Layout
-------------- */

.main-container {
  margin-top: 2rem;
  display: flex;
}

.aside {
  width: 20%;
  display: flex;
  flex-direction: column;
}

/* --------------
     Components 
----------------- */

.title {
  font-family: var(--title-font);
  font-size: 4rem;
  margin: 0;
  text-transform: uppercase;
  color: white;
}

.btn {
  padding: 0.3em 0.5em;
  display: table-cell;
  vertical-align: middle;
  width: 5rem;
  height: 2.5rem;
  border: 1px solid rgba(0, 0, 0, 0.2);
  font: inherit;
  border-radius: 0.3em;
  box-shadow: 0 1px 0 hsla(0, 0%, 100%, 0.7) inset,
    0 0.15em 0.1em -0.1em rgba(0, 0, 0, 0.4);
  background: linear-gradient(hsla(0, 0%, 100%, 0.3), hsla(0, 0%, 100%, 0))
    var(--button-color);
  color: white;
  font-weight: bold;
  cursor: pointer;
  outline: none;
  margin: 0 auto;
}

.autoplay {
  position: absolute;
  display: none;
}

.aside__rules-btn {
  display: inline-block;
  background: none;
  cursor: pointer;
  color: white;
  border: none;
  border-bottom: white;
}

@keyframes slideIn {
  from {
    bottom: -300px;
    opacity: 0;
  }
  to {
    bottom: 0;
    opacity: 1;
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  overflow: auto;
  background: rgba(0, 0, 0, 0.7);
}

.modal__content {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 20%;
  background: white;
  padding: 1.5rem 2rem;
  animation-name: slideIn;
  animation-duration: 0.4s;
}

.modal__close {
  text-align: right;
  font-size: 1.75rem;
  cursor: pointer;
}

.board {
  height: 100%;
  border-spacing: 0;
  margin: 0.5em auto;
  border-collapse: collapse;
}

.board td {
  border: 1px solid rgb(255, 255, 255);
}

@keyframes appear {
  50% {
    box-shadow: 0 0 0 99px rgb(187, 187, 187) inset;
  }
}

.board input[type="checkbox"] {
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  display: block;
  height: 30px;
  width: 30px;
  border: 0;
  background-color: transparent;
}

.board input[type="checkbox"]:checked {
  background: white;
  --moz-box-shadow: 0 0 0 99px black inset;
  animation: appear 500ms;
}

.board input[type="checkbox"]:focus {
  border: 2px solid darkblue;
}

/* ------------
    Utility
--------------*/

.x-center {
  margin: 0 auto;
}

