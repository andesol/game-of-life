low: auto;\r\n  background: rgba(0, 0, 0, 0.7);\r\n}\r\n\r\n.modal__content {\r\n  position: fixed;\r\n  bottom: 0;\r\n  width: 100%;\r\n  height: 20%;\r\n  background: white;\r\n  padding: 1.5rem 2rem;\r\n  animation-name: slideIn;\r\n  animation-duration: 0.4s;\r\n}\r\n\r\n.modal__close {\r\n  text-align: right;\r\n  font-size: 1.75rem;\r\n  cursor: pointer;\r\n}\r\n\r\n.board {\r\n  height: 100%;\r\n  border-spacing: 0;\r\n  margin: 0.5em auto;\r\n  border-collapse: collapse;\r\n}\r\n\r\n.board td {\r\n  border: 1px solid rgb(255, 255, 255);\r\n}\r\n\r\n@keyframes appear {\r\n  50% {\r\n    box-shadow: 0 0 0 99px rgb(187, 187, 187) inset;\r\n  }\r\n}\r\n\r\n.board input[type=\"checkbox\"] {\r\n  -webkit-appearance: none;\r\n  -moz-appearance: none;\r\n  appearance: none;\r\n  display: block;\r\n  height: 30px;\r\n  width: 30px;\r\n  border: 0;\r\n  background-color: transparent;\r\n}\r\n\r\n.board input[type=\"checkbox\"]:checked {\r\n  background: white;\r\n  --moz-box-shadow: 0 0 0 99px black inset;\r\n  animation: appear 500ms;\r\n}\r\n\r\n.board input[type=\"checkbox\"]:focus {\r\n  border: 2px solid darkblue;\r\n}\r\n\r\n/* ------------\r\n    Utility\r\n--------------*/\r\n\r\n.x-center {\r\n  margin: 0 auto;\r\n}\r\n"],"names":[],"version":3,"file":"game-of-life-v3.28624e2b.css.map","sourceRoot":"/__parcel_source_root/"}